<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/profile_image"
        />

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/message_profile_image"
        android:layout_alignParentEnd="true"
        android:background="@drawable/receiver_message_textbackdround"
        android:padding="10dp"
        android:text="sender message"
        android:textColor="@color/backgroundcolor"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/sender_message_textbackground"
        android:padding="10dp"
        android:text="receiver message"
        android:textColor="@color/backgroundcolor"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/message_profile_image"
        tools:ignore="NotSibling" />



</RelativeLayout>