<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    android:background="@color/babypink"

    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    tools:context=".SetupActivity">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/setup_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_pic"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#FF000000"
        app:civ_border_width="3dp" />



    <RelativeLayout
        android:id="@+id/reglayout"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_height="300dp"
        android:background="@drawable/background_login">


        <EditText
            android:id="@+id/setup_userName"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/setup_fullName"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setup_userName"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Full Name"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/setup_phoneNumber"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setup_fullName"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" Phone Number"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/setup_residence"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setup_phoneNumber"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=" Residence"
            android:textColorHint="#fff" />


    </RelativeLayout>


    <Button
        android:id="@+id/setup_saveinfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autoText="true"
        android:layout_below="@+id/reglayout"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_login"
        android:text="Save"
        android:textColor="@color/blue"
        tools:autoText="true" />


</RelativeLayout>
