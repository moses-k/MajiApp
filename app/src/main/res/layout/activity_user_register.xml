
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    tools:context=".User_Login">




    <TextView
        android:id="@+id/user"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as user"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold" />



    <RelativeLayout
        android:id="@+id/reglayout"
        android:layout_below="@+id/user"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background_login">


        <TextView
            android:id="@+id/usertitle"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/userEmail"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="73dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/userPassword"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="125dp"
            android:ems="10"
            android:hint="Password"
            android:textColorHint="#fff"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/userconfirmPassword"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="170dp"
            android:ems="10"
            android:hint=" ConfirmPassword"
            android:textColorHint="#fff"
            android:inputType="textPassword"/>


    </RelativeLayout>




    <Button
        android:id="@+id/userregister"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reglayout"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="50dp"
        android:autoText="true"
        android:background="@drawable/background_login"
        android:text="Register"
        android:textColor="@color/blue"
        tools:autoText="true" />

    <TextView
        android:id="@+id/takeusertologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userregister"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="10dp"
        android:text="Already have an account? click here to Login"
        android:textColor="@color/blue"/>


</RelativeLayout>